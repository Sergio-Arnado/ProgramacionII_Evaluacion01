<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvPasteldeChoclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:fontFamily="cursive"
        android:text="@string/pastel_de_choclo"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCazuela"
        android:layout_width="92dp"
        android:layout_height="31dp"
        android:layout_marginTop="384dp"
        android:fontFamily="cursive"
        android:text="Cazuela"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvPasteldeChoclo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="153dp"
        android:layout_height="97dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/restaurante" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="148dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657"
        app:srcCompat="@drawable/cazuela" />

    <Switch
        android:id="@+id/switchTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="648dp"
        android:minHeight="48dp"
        android:text="Propina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvcant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="204dp"
        android:text="Cant."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvcant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="432dp"
        android:text="Cant."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etcantidad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="4dp"
        android:ems="5"
        android:hint="cantidad 1"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/tvcant1"
        app:layout_constraintTop_toTopOf="@+id/tvcant1" />

    <EditText
        android:id="@+id/etcantidad2"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:ems="3"
        android:hint="cantidad 2"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvcant2"
        app:layout_constraintTop_toTopOf="@+id/tvcant2" />

    <TextView
        android:id="@+id/tvprecio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="92dp"
        android:ems="6"
        android:hint="precio 1"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/etcantidad1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etcantidad1" />

    <TextView
        android:id="@+id/tvprecio2"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:ems="6"
        android:hint="precio 2"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/etcantidad2"
        app:layout_constraintTop_toTopOf="@+id/etcantidad2" />

    <TextView
        android:id="@+id/tvcomida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="160dp"
        android:text="Comida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="170dp"
        android:text="TOTAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/tvvalorcomida"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="248dp"
        android:ems="6"
        android:hint="valorcomida"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/tvprecio2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvprecio1" />

    <TextView
        android:id="@+id/tvvalorpropina"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="648dp"
        android:ems="6"
        android:hint="valorpropina"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvvalortotal"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvvalortotal"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="28dp"
        android:ems="6"
        android:hint="valortotal"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/tvprecio2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvvalorpropina" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="149dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paste2l" />

</androidx.constraintlayout.widget.ConstraintLayout>